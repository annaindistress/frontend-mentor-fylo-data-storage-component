.progress
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center

    &__bar
        display block
        width 100%
        height 20px
        margin-bottom 10px
        padding 3px
        background-color alpha(color-blue-100, .5)
        border-radius 10px

    &__value
        position relative
        display block
        width 75%
        height 14px
        background-image linear-gradient(90deg, color-gradient-orange 0, color-gradient-pink 100%)
        border-radius 8px

        &::after
            position absolute
            top 2px
            right 2px
            content ''
            display block
            width 10px
            height 10px
            background-color white
            border-radius 50%

    &__label
        font-size 12px
        line-height 1.25
